{
  "manifest_version": 2,

  "name": "nbnhhsh - 能不能好好说话",
  "description": "能不能好好说话",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
		"16": "icon.png",
		"48": "icon@2x.png",
		"128": "icon@8x.png"
	},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": ["<all_urls>"]
}
